Cell[BoxData[{
 RowBox[{
  RowBox[{"ClearAll", "[", "maximizeApprovals", "]"}], 
  ";"}], "\[IndentingNewLine]", 
 RowBox[{
  RowBox[{
   RowBox[{
    RowBox[{"numApprovals", "[", 
